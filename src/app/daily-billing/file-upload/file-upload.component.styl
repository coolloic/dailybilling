:host
  error-bg-color = #fcf4f2
  error-ft-color = #e62600
  error-bd-color = #fdf4f2
  .form-group
    display flex
    max-width 100%
    input
      position relative
      background-color steelblue
      color #fff
      border 1px solid #999
      font-size 1.5rem
      width 100%
      padding 10px
    label
      display block
      position relative
      color #c0645e
      background-color error-bg-color
      padding 15px 30px
      margin-top 5px
      border 1px solid error-ft-color
      border-left 3px solid error-ft-color
      &:before, &:after
        content ''
        position absolute
        left 10px
        top 50%
        width 15px
        height 2px
        background-color error-ft-color
      &:before
        transform rotate(45deg)
      &:after
        transform rotate(-45deg)
